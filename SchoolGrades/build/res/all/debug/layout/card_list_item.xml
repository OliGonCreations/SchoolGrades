<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeightLarge"
                android:padding="8dp"
                android:background="@drawable/background_card">

    <ImageView
            android:layout_height="?android:attr/listPreferredItemHeightLarge"
            android:layout_width="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/color"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:id="@+id/text"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/color"
            android:layout_centerVertical="true"
            android:textColor="#707070"/>

    <ImageView
            android:id="@+id/icAverage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_average"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/subject_current_average"/>
    <TextView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/subject_current_average"
            android:layout_alignTop="@+id/icAverage"
            android:layout_alignBottom="@+id/icAverage"
            android:layout_alignParentRight="true"/>
</RelativeLayout><!-- From: file:/home/jonas/Dokumente/Development/Android%20Workspace/SchoolGradesProject/SchoolGrades/src/main/res/layout/card_list_item.xml -->